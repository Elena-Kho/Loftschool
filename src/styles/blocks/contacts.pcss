.contacts__form {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 58%;

  outline: 1px solid lime;
}

.contacts__info {
  width: 45%;
  margin-top: 75px;
}

.contacts__button {
  margin-top: 60px;
}

@include desktop {
  .contacts__form {
    width: 825px;
  }

  .contacts__info {
    width: 365px;
  }
}
