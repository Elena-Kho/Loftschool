.intro {
  position: relative;
  min-height: 745px;
  outline: 1px solid pink;
}

.intro__main {
  margin-top: 300px;
  margin-bottom: 100px;
}

.intro__scroll {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%);
}

@include desktop {
  .intro__main {
    margin-top: 250px;
  }
}

@include tablets {
  .intro__main {
    margin-top: 170px;
  }
}

@include phones {
  .intro {
    min-height: 550px;
  }

  .intro__main {
    margin-top: 110px;
  }
}


