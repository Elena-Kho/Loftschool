.button {
  padding: 30px 120px;
  border-radius: 40px 5px;
  text-transform: uppercase;
  font-size: 18px;
  font-weight: 700;
  color: #ffffff;
  background: linear-gradient(to right, #bb00ff, #5900ff);

  &:hover {
    background: linear-gradient(to right, #5900ff, #bb00ff);
  }
}

@include 950 {
  .button {
    padding: 25px 100px;
    border-radius: 30px 0;
    font-size: 16px;
  }
}

@include 600 {
  .button {
    padding: 20px 80px;
    border-radius: 30px 0;
    font-size: 16px;
  }
}
